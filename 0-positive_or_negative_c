#include <stdio.h>
/**
  * main - gives result of positive or negative number
  Return: 0 (Succes)
/* betty style doc for function main goes there */
int main(void)
{
	int n;

	srand(time(0));
	n = rand() - RAND_MAX / 2;
	if (n>0){
	printf("%d is postive"/n, n);}
	else if (n<0){
	printf("%d is negative"/n, n);
	else (n=0){
	printf("%d is equal to zero/n" ,n)
	}
	/* your code goes there */
	return (0);
}
